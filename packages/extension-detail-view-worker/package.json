{
  "name": "@lvce-editor/extension-detail-view",
  "version": "0.0.0-dev",
  "description": "Extension Detail View Worker",
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/extensionDetailViewWorkerMain.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 60,
        "lines": 65
      }
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "<rootDir>/src/parts/TokenizeHtml/TokenizeHtml.ts",
      "<rootDir>/src/extensionDetailViewWorkerMain.ts"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@lvce-editor/assert": "^1.3.0",
    "@lvce-editor/i18n": "^1.1.0",
    "@lvce-editor/rpc": "^4.1.0",
    "@lvce-editor/rpc-registry": "^2.27.0",
    "@lvce-editor/verror": "^1.7.0",
    "@lvce-editor/viewlet-registry": "^1.1.0",
    "@lvce-editor/virtual-dom-worker": "^1.45.0",
    "jest": "^30.0.0",
    "pretty-bytes": "^7.0.0",
    "ts-jest": "^29.4.0"
  }
}
